  #dw-minimap
    background: hsl(0, 0%, 93%);
    float: right;


  #dw-recent-comments
    clear: both;
    background: bgcolor;
    padding-right: 8px;

    h3
      font-weight: bold;
      font-family: verdana;
      font-size: 13px;
      margin: 0 0 7px 4px;

    .dw-p
      cursor: pointer;
      margin: 2px;

    .dw-p-bd
      max-height: 130px;
      overflow: hidden;

    .dw-p:hover
      outline: 2px solid hsl(210, 39%, 84%);

      .dw-p-hd
        background-color: hsl(210, 39%, 84%);

      .dw-p-bd
        background-color: hsl(210, 100%, 96%);
