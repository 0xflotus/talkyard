// Without this, sometimes durin React.render(), the sidebar contents is visible
// at a weird location, resulting in weird page dimensions when calculating minimap size.
#dw-any-sidebar
  position: absolute;
  top: 0;
  right 0;
  bottom 0;
  left 0;

#dw-comment-counts
  float: right;
  clear: right;
  padding: 6px 5px 6px 12px;
  background: white;
  font-style: italic;
  text-align: right;

html:not(.dw-hz).touch #dw-comment-counts
  clear: none;

#dw-minimap-holder
  position: fixed;
  width: 70%;
  top: 0;
  left: 0;
  height: 0;
  z-index: 1001 // not above dialogs, but above resize-columns handle (1000)

  .dw-upper-right-corner
    position: absolute;
    top: 0;
    right: 0;

    #dw-minimap-placeholder
      float: right;
      width: 0px;

    #dw-minimap
      float: right;
      background: hsl(0, 0%, 93%)

.dw-sidebar-is-open #dw-minimap
  // The minimap might be almost in the middle of the page and might overlap
  // other gray stuff, so draw a border.
  border-left: 1px solid black;
  border-bottom: 1px solid black;

#dw-toggle-sidebar-and-comment-counts
  float: right;
  clear: right;
  right: 0;

#dw-toggle-sidebar
  float: right;
  clear: right;
  background: #ddd;
  border: none;
  font-size: 130%;
  padding: 8px 7px;
  z-index: 10;


.dw-hz #dw-sidebar
  border-left: 4px solid #555;
  background: white;
  padding: 0 0 0 11px;

  .dw-comments
    background: white;


#dw-sidebar
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 30%;
  z-index: 1001; // not above dialogs, but above resize-columns handle (1000)
  padding: 0 0 0 11px;
  bgcolor = #eee;
  background: bgcolor;

  &.dw-sidebar-fixed
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;

  .btn
    float: left
    margin: 10px 5px 0 0;
    border: none;
    border-radius: 0;
    background: hsl(0, 0%, 85%);
    color: #222;

    &.active
      background: hsl(0, 0%, 74%);
      color: #000;

  #dw-toggle-sidebar
    margin-bottom: 15px; // prevents the Unread/Recent/Starred buttons from floating-left below
    top: 0;
    right: 0;

  .dw-comments
    clear: both;
    background: bgcolor;
    padding: 15px 8px 0 0;

    h3
      font-weight: bold;
      font-family: verdana;
      font-size: 13px;
      margin: 0 0 7px 4px;

    p
      margin-top: 8px;

    .dw-p
      cursor: pointer;
      margin: 2px;
      2px solid #eee;
      &.dw-current-post
        border: 4px solid hsl(210, 100%, 67%);
        margin: 0;

    .dw-p .dw-mark-click
      margin-left: -3px;

    .dw-p-bd
      max-height: 130px;
      overflow: hidden;

    .dw-p:hover
      outline: 2px solid hsl(210, 45%, 74%);

      .dw-p-hd
        background-color: hsl(210, 39%, 84%);

      .dw-p-bd
        background-color: hsl(210, 100%, 96%);


    .comment-enter,
    .comment-leave
      transition-duration: .7s;
      transition-timing-function: ease;
      transition-property: opacity, max-height;

    .comment-enter
      opacity: 0;
      max-height: 0px;

    .comment-enter.comment-enter-active
      opacity: 1;
      max-height: 100px;

    .comment-leave
      opacity: 1;
      max-height: 100px;

    .comment-leave.comment-leave-active
      opacity: 0.1;
      max-height: 0px;
