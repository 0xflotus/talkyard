#dw-minimap-and-open-sidebar-btn
  position: fixed;
  top: 0;
  right: 0;
  display: none; // until has scrolled a bit
  z-index: 1001 // not above dialogs, but above resize-columns handle (1000)
  opacity: 0.8

  #dw-minimap
    float: right;
    background: hsl(0, 0%, 93%)


#dw-toggle-sidebar
  float: right;
  clear: both;
  background: #ddd;
  border: none;
  font-size: 130%;
  padding: 8px 7px;


.dw-hz #dw-sidebar
  border-left: 4px solid #555;
  background: white;
  padding: 0 0 0 11px;

  #dw-recent-comments
    background: white;


#dw-sidebar
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 30%;
  overflow: auto;
  z-index: 1001; // not above dialogs, but above resize-columns handle (1000)
  padding: 0 0 0 11px;
  bgcolor = #eee;
  background: bgcolor;

  &.dw-sidebar-fixed
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;

