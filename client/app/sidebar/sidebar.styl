#dw-any-sidebar
  z-index: 1010;
  position: relative;

.dw-sidebar-z-index
  z-index: 1015;
  position: fixed;

#dw-comment-counts
  float: right;
  clear: right;
  padding: 6px 5px 6px 12px;
  background: white;
  font-style: italic;
  text-align: right;

html:not(.dw-hz):not(.mouse) #dw-comment-counts
  clear: none;

#dw-minimap-holder
  position: fixed;
  width: 70%;
  top: 0;
  left: 0;
  height: 0;
  z-index: 1001 // not above dialogs, but above resize-columns handle (1000)

  .dw-upper-right-corner
    position: absolute;
    top: 0;
    right: 0;

    #dw-minimap-placeholder
      float: right;
      width: 0px;

    #dw-minimap
      float: right;
      background: hsl(0, 0%, 93%)
      box-shadow: 0px 2px 4px hsl(0, 0%, 33%);

#dw-toggle-sidebar-and-comment-counts
  float: right;
  clear: right;
  right: 0;

#dw-toggle-sidebar
  float: right;
  clear: right;
  background: #ddd;
  border: none;
  font-size: 130%;
  padding: 8px 7px;
  z-index: 10;


.dw-hz #dw-sidebar
  box-shadow: -2px 0 5px hsl(0, 0%, 20%);
  background: white;
  padding: 0 0 0 11px;

  .dw-comments
    background: white;


#dw-sidebar

  z-index: 1001; // not above dialogs, but above resize-columns handle (1000)
  padding: 0 0 0 11px;
  @media (max-width: 510px)
    padding-left 7px;
  bgcolor = white;
  background: bgcolor;

  .btn
    float: left
    margin: 10px 5px 0 0;
    @media (max-width: 510px)
      margin-top: 5px;
    border: none;
    border-radius: 0;
    background: hsl(0, 0%, 85%);
    color: #222;

    &.active
      background: hsl(0, 0%, 74%);
      color: #000;

  #dw-toggle-sidebar
    margin-bottom: 15px; // prevents the Unread/Recent/Starred buttons from floating-left below
    @media (max-width: 510px)
      margin-bottom: 0;
    top: 0;
    right: 0;

  .dw-comments
    clear: both;
    background: bgcolor;
    padding: 10px 8px 0 0;
    position: relative;

    overflow-y: scroll;
    max-height: calc(100vh - 54px);

    // Click-drag scrolls, but if it sometimes instead selects text (because few comments,
    // nothing to scroll) then that's rather confusing.
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

    @media (max-height: 500px)
      padding-top: 7px;

    h3
      font-weight: bold;
      font-family: $uiFont;
      font-size: 13px;
      margin: 0 0 10px 4px;

    p
      margin-top: 8px;

    .dw-p

      cursor: pointer;
      margin: 0;
      border-top: 1px solid #eee;
      padding: 4px 0 1;

      &:hover
        .dw-p-hd,
        .dw-p-bd
          background-color: hsl($uiHue, 100%, 97%);

      &.dw-current-post
        .dw-p-hd,
        .dw-p-bd
          background-color: hsl($uiHue, 100%, 92%);
        .dw-p-by
          color: hsl(0, 0%, 22%);
        .dw-fullname,
        .dw-p-hd,
        .dw-p-bd-blk
          color: hsl(0, 0%, 15%); // makes it darker, since background darker

    .dw-p .dw-mark-click
      margin-left: -3px;

    .dw-p-bd
      max-height: 130px;
      overflow: hidden;
      padding: 2px 1px 3px 3px;


    .comment-enter,
    .comment-leave
      transition-duration: .7s;
      transition-timing-function: ease;
      transition-property: opacity, max-height;

    .comment-enter
      opacity: 0;
      max-height: 0px;

    .comment-enter.comment-enter-active
      opacity: 1;
      max-height: 100px;

    .comment-leave
      opacity: 1;
      max-height: 100px;

    .comment-leave.comment-leave-active
      opacity: 0.1;
      max-height: 0px;

.es-editor-help-one,
.es-editor-help-two,
.es-editor-help-three,
.es-editor-help-four
  position: absolute;
  z-index: 1;
  box-shadow: 6px 6px 8px #777;
  left: 25px;
  max-width: 380px !important;
  font-size: 105%;
  .dw-help-text
    padding: 1ex 1ex 0;
  .icon-comment:before
    opacity: 0.67;
    margin-right: 7px;
  .dw-hide
    padding: 10px 10px 7px 20px;

.es-editor-help-one
  top: 60px;
.es-editor-help-two
  top: 75px;
.es-editor-help-three
  top: 95px;
.es-editor-help-four
  top: 110px;

