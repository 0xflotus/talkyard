
$spaceForButtons = 45px;
$showPreviewMinWidth = 800px;

.dw-embedded-editor
  #debiki-editor-controller
    height: 100% !important
  #debiki-editor-placeholder
    display: none


.esEdtr_backdrop
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: black; // but js sets opacity.
  pointer-events: none;

.esEdtr_titleEtc
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;

  @media (max-width: 700px)
    // Now don't list all stuff side by side, instead, one per row.
    flex-direction: column;

.esEdtr_titleEtc_title
  flex: 1;


#debiki-editor-placeholder
  height: 300px


#debiki-editor-controller
  position: fixed !important; // !important so jQuery.resizable() won't overwrite
  top: initial;
  bottom: 0
  width: 100%
  height: 300px
  background: hsl(0, 0%, 89%)
  z-index: 1030

  &.editor-box-shadow
    box-shadow: 0px -6px 24px 10px hsl(0, 0%, 50%);

  @media (max-width: $showPreviewMinWidth)
    top: 0;
    height: 100% !important;

    &.editor-minimized
      top: initial;
      height: 47px !important;

      .editor-area,
      .preview-area,
      button
        display: none !important;

      #esMinimizeBtn
        display: block !important;

  .btn-default
    border-color: hsl(0, 0%, 70%); // not 80% because background not white but light gray

  .resizable-t
    height: 18px;
    top: -8px;

  .dw-editor-guidelines-wrap
    position: absolute;
    bottom: 100%;

  .dw-editor-guidelines
    background-color: hsl(49, 70%, 93%);
    border: 1px solid hsl(0, 0%, 88%);
    box-shadow: 4px 4px 6px hsl(0, 0%, 64%);
    position: relative;
    left: 13px;
    padding: 18px 18px 8px;
    min-width: 300px;
    max-width: 550px;
    @media (max-width: 500px)
      max-width: 400px;
    @media (max-width: 400px)
      max-width: 300px;

    .dw-hide
      padding: 0 15px 8px;
      color: hsl($uiHue, 70%, 45%);
      float: right;

  #editor-after-borders
    position: absolute;
    top: 4px;
    right: 15px;
    bottom: 0;
    left: 15px;

  .editor-area
    width: 50%
    position: absolute
    top: 12px
    bottom: $spaceForButtons;

    .editor-area-after-borders
      position: absolute;
      top: 0;
      right: 10px;
      bottom: 0;
      left: 0;
      display: flex;
      flex-direction: column;

    .dw-doing-what
      position: relative;
      margin-bottom: 4px;

    .icon-info-circled
      color: white;
      text-shadow: 0 0 3px black;
      font-size: 20px;
      padding-left: 7px;
      padding-left: 2px;
      position: absolute;
      top: -5px;
      padding-left: 5px;
      &:hover
        text-decoration: none;
        outline: 1px solid hsl($uiHue, 50%, 70%);
        background-color: hsl($uiHue, 50%, 85%);

    .title-input
      width: 100%;
      padding: 6px;
      font-size: 14px;

    .editor-instructions
      margin: 14px 0 5px;

    .editor
      width: 100%
      height: 100%
      font-size: 13px;
      padding: 6px;

    @media (max-width: $showPreviewMinWidth)
      width: 100%;
      .editor-area-after-borders
        right: 0;

  .preview-area

    width: 50%
    position: absolute
    top: 12px
    right: 0
    bottom: 5px
    z-index: 1; // so above the div with Submit & Cancel buttons

    .dw-preview-help
      position: absolute;
      z-index: 5;
      top: 55px;
      left: 25px;
      box-shadow: 4px 4px 5px #999;

    .preview
      position: absolute;
      top: 26px;
      left: 0;
      right: 0;
      bottom: 0;
      padding: 0 2px 0 3px;
      background: white
      overflow: auto

    @media (max-width: $showPreviewMinWidth)
      display: none;
      width: 100%;
      bottom: $spaceForButtons;

    @media (min-width: $showPreviewMinWidth + 1)
      // In case JS has adden display: none, and via CSS we've hidden the Show-preview button,
      // then we need to ensure the preview is indeed visible again now when the win width is wider:
      display: block !important;

  .submit-cancel-btns
    width: 100%;
    position: absolute;
    bottom: 6px;
    button
      margin-right: 5px;
    #esPreviewBtn,
    #esMinimizeBtn
      float: right;
      margin: 0 0 0 5px;
    @media (min-width: $showPreviewMinWidth + 1)
      #esPreviewBtn,
      #esMinimizeBtn
        display: none;

  .view-edit-history
    margin-left: 1em;
    vertical-align: middle;

