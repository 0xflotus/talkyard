.dw-forum-intro
  clearfix()
  margin-top: 1em;
  max-width: 100ex;
  p
    margin-bottom: 0.8em;

.dw-forum-intro-close
  display: block;
  padding: 4px 0 8px;
  position: relative;
  left: -3px;
  color: hsl(211, 50%, 50%);
  float: left; // else underline appears although mouse far away
  font-size: 93%;

.dw-hide-forum-intro .dw-forum-intro
  display: none;

.dw-forum > .dw-help
  margin-bottom: 7px;

// Action bar
//===========================

.dw-forum-actionbar
  clear: both
  padding 0 0 25px

  marginTop = 20px

  .form-group
    margin-bottom: 0;

  li
    margin-left: 0

  .dw-main-category-dropdown
    float: left
    margin: marginTop 15px 0 0
    @media (max-width: 801px)
      margin-right: 8px
    @media (max-width: 651px)
      margin-right: 5px

    .dropdown-toggle
      margin 0
      padding: 5px 12px 5px 15px

    a
      cursor: pointer

  .dw-sort-order
    float: left

  .nav
    float: left

    button
      float: left;
      border: none;
      box-shadow: none;

      min-width: 70px;
      margin-top: marginTop
      padding-left: 15px;
      padding-right: 15px;
      @media (max-width: 801px)
        padding-left: 12px;
        padding-right: 12px;

  .dw-filter
    float: left;
    max-width: 300px;
    margin-left: 10px;
    @media (max-width: 801px)
      margin-left: 8px
    @media (max-width: 651px)
      margin-left: 5px

  .dw-filter select,
  button
    // Why do I need to -2 for the Create Topic button to align with
    // the category buttons and Latest and Top buttons to the left?
    margin: (marginTop - 2) 0 0 0

  button
    float: right

  button,
  span
    color: hsl(0, 0%, 13%);

  @media (max-width: 801px)
    select.form-control,
    .btn
      font-size: 13px;

    .dw-forum-actionbar .nav button
      min-width: 50px;
      padding-left: 12px;
      padding-right: 12px;

  @media (max-width: 651px)
    .dw-forum-actionbar .nav button
      min-width: 40px;
      padding-left: 8px;
      padding-right: 8px;


// Topics
//===========================

// Avoid undesired flash-of-the-wrong-topic-list before we know if the topic list included
// by the server is the one we want to show. (The server doesn't know which #/client-route
// we're using, we don't yet use real URLS, only hash fragment client side router urls.)
html.js:not(.dw-react-started) #dw-topic-list tbody
  display: none;

#dw-topic-list
  width: 100%

  $paddingLeft = 8px
  $fontSize = 14px

  th
    padding: 0 $paddingLeft 8px;
    font-weight: normal;
    font-size: $fontSize;
    color: hsl(0, 0%, 60%);

  .num
    text-align: center
    min-width: 55px

  tbody
    tr
      border-top: 1px solid hsl(0, 0%, 89%);
      &:first-child
        border-top-color: hsl(0, 0%, 91%);
        border-top-width: 3px;

      td
        padding: 10px $paddingLeft
        font-size: $fontSize;
        a
          color: hsl(0, 0%, 13%);
          padding: 3px 6px 5px 0; // makes it easier to click
          &:hover
            text-decoration: none;
            background: hsl(210, 100%, 97%);
            outline: 1px solid hsl(209, 100%, 92%);

        &:not(.dw-tpc-title)
          white-space: nowrap;

        &.dw-tpc-title .icon-pin:before
          color: #555;
          padding-right: 17px;
          margin-left: 0;

        .icon-help-circled:before
          font-size: 14px;
          color: #555;
          margin: 0 5px 0 0;

        .dw-qa-ans-count
          font-size: 85%;
          margin-left: -5px;

        .icon-check-empty:before
          font-weight: bold;
          font-size: 105%;
          margin: 0 5px 0 0;
          position: relative;
          top: 1px;

        .icon-idea:before,
        .icon-attention-circled:before, // problems
        .icon-cancel-circled-empty:before, // closed topics
        .icon-ok-circled-empty:before, // solved questions
        .icon-check:before  // fixed todos
          color: hsl(0, 0%, 40%);
          margin: 0 5px 0 0;

        .icon-attention-circled:before
          color: hsl(0, 0%, 37%);

        .icon-idea:before
          color: hsl(0, 0%, 15%);
          margin-right: 3px; // there's some whitespace to the right inside the icon

        .icon-ok-circled-empty:before
          margin: 0 7px 0 0;
          position: relative;
          left: 1px;

        .icon-check:before
          font-size: 17px;
          position: relative;
          top: 2px;

        &.num:not(.dw-tpc-feelings, .dw-tpc-replies)
          color: hsl(0, 0%, 53%);

        &.dw-tpc-replies
          color: hsl(0, 0%, 20%);

        .dw-p-excerpt
          color: hsl(0, 0%, 54%);
          margin: 1ex 20px 1ex 0;
          max-width: 650px;
          font-size: 100%;
          a
            color: hsl(210, 100%, 40%);
            margin-left: 6px;

.load-more
  text-align: center
  width: 100%
  display: block
  margin: 20px 0 0
  cursor: pointer



// Categories
//===========================

.parent-forums-list
  margin: -25px 0 0; // place inside the #dw-react-topbar, or too much whitespace above title
  padding-left: 0; // needed for FF, not Chrome. Weird
  @media (max-width: 600px)
    margin-top: 30px;  // don't overlap with #dw-react-topbar contents

.parent-forums-list li {
  margin: 0;
  list-style-type: none;
  display: inline-block;
  // Make it clickable: (otherwise #dw-react-topbar might steal clicks)
  z-index: 1;
  position: relative;
}

.parent-forums-list li::after {
  content: " â†’ ";
}


/* --- Forum list --- */

.forum-table
  th
    color: hsl(0, 0%, 55%)

  & > tbody > tr > td:first-child
    width: 45%; // or sometimes 80-90% wide

  .topic-title.icon-pin:before
    margin: 0 4px 0 0;

  .topic-title
    [class^="icon-"]:before, [class*=" icon-"]:before
      margin: 0 4px 0 0;
      font-size: 95%;

    .icon-check-empty:before
      position: relative;
      top: 1px;

    .icon-pin:before,
    .icon-ok-circled-empty:before
      opacity: 0.85;

    .icon-help-circled:before,
    .icon-cancel-circled-empty:before
      opacity: 0.8;


.forum-table > tbody > tr > td {
  padding: 15px 5px 10px 8px; /* 8x paddin-left aligns w/ row header */
}

.forum-table .forum-title-wrap {
  font-size: 17px;
  margin: 5px 10px 11px 0;
}

.DW.DW .forum-table td {
  background: none; /* cancel Twitter Bootstrap */
}

.forum-table .topic-table-excerpt tbody,
.forum-table .topic-table-excerpt td {
  border: none;
  padding-left: 0; /* or wouldn't align with parent table header */
}

.forum-table .topic-table-excerpt {
  margin-bottom: 10px;
}

.forum-table .topic-table-excerpt .topic-details {
  font-size: 12px;
}


/* --- Forum topic list --- */

.DW .dw-a-new-forum-topic {
  margin: 30px 0 13px;
  background: white;
}

.topic-table .topic-title {
  white-space: nowrap;
  font-weight: bold;
  color: hsl(0, 0%, 8%);
}

.topic-table tbody {
  /* Copied from Twitter Bootstrap */
  border-bottom: 1px solid hsl(0, 0%, 87%);
}

.topic-details {
  color: gray;
}

.topic-excerpt {
  color: #555;
  height: 68px;
  display: none;
}

.topic-list {
  margin-left: 0;
  border-top: 1px solid hsl(0, 0%, 87%);
}

.topic-list > li {
  list-style-type: none;
  margin: 0;
  padding: 10px 0 5px;
  border-bottom: 1px solid hsl(0, 0%, 87%);
}

.topic-list > li:hover {
  background-color: #f9f9f9;
  cursor: pointer;
}

.topic-list > li:hover .topic-details,
.topic-list > li:hover .topic-excerpt {
  color: #333; /* darker, since background now gray */
}

.topic-list .topic-title {
  font-family: open sans, sans-serif;
  margin: 20px 0 5px;
}

.topic-list .topic-details {
  margin-bottom: 5px;
}


