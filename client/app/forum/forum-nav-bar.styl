.dw-forum-actionbar
  clear: both
  padding 20px 0 25px

  li
    margin-left: 0

  .dw-main-category-dropdown
    float: left
    margin-right: 10px

    .dropdown-toggle
      padding: 5px 12px 5px 15px

    a
      cursor: pointer

  .nav
    float: left
    margin-left: 10px

    button
      float: left;
      border: none;
      box-shadow: none;

      padding-left: 15px;
      padding-right: 15px;
      min-width: 70px;

      &.active
        background-color: hsl(211, 50%, 53%)
        color: white

  button
    float: right
    margin-left: 5px
    color: hsl(211, 100%, 40%);


.forum-table .forum-title
  cursor: pointer;  // why needed? It's already an <a>


