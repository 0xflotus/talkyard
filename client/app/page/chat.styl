

html.es-chat
  #theChatVspace
    flex: 1;

  #dwPosts
    flex: none;

  &:not(.dw-react-started) #dwPosts
    visibility: hidden; // avoids flash of not-yet-scrolled-to-bottom message list

  .esPage > .container
    margin-left: 10px;


.esChatChnl_about
  margin: 10px 0 30px;
  padding-left: 3px; // aligns vertically â€” posts & stuff have padding-left: 3px

  .dw-p-bd
    padding: 0;

  .esAvtrName_username,
  .esAvtrName_fullName
    vertical-align: baseline;
    font-weight: bold;

  .esAvtrName:hover
    text-decoration: underline;
    cursor: pointer;


.esChatMsg
  margin-bottom: 8px;

  .dw-p-hd .dw-p-by
    color: #444;
    text-shadow: 1px 0 0 #444; // makes it even bolder
    letter-spacing: 0.7px; // or text-shadow --> the letters get too close to each other

  .dw-p-bd
    padding-top: 2px;
    p
      margin-bottom: 0.6em;
      &:last-child
        margin-bottom: 0;

  .dw-p-hd,
  .dw-p-bd
    margin-left: 50px; // leaves space for the avatar
  .edAvtr img
    width: 36px;
    height: 36px;

.esChatMsgEdtr
  position: relative;
  background: white;
  left: -3px;
  z-index: 1111;
  margin-top: 15px;
  padding-bottom: 15px;

.esChatMsgEdtr_textarea
  width: 100%;
  border-radius: 4px;

