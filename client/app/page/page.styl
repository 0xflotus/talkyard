.dw-page  // rename?
  // A child, the root thread .dw-depth-0, floats left.
  clearfix()

  position: relative

  a
    cursor: pointer


// Columns
//==============================

$watchbarWidth = 230px  // dupl value, in css too [7GYK42]

body
  overflow: hidden;

#esPageColumn
  top: 0;
  bottom: 0;
  left: $watchbarWidth;
  right: 25vw;
  position: fixed;
  // Native scrollbars look different in different browsers. Use js scrollbars instead?
  // E.g.: http://stackoverflow.com/a/25480648/694469
  // or http://jscrollpane.kelvinluck.com/index.html
  overflow-y: scroll;
  overflow-x: visible;

#esWatchbarColumn
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: $watchbarWidth;
  z-index: 1010;

#esThisbarColumn
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  width: 25vw;
  z-index: 1010;

html:not(.es-pagebar-open)
  #esThisbarColumn
    display: none;
  #esPageColumn
    right: 0;

html:not(.es-watchbar-open)
  #esWatchbarColumn
    display: none;
  #esPageColumn
    left: 0;


// Page width & padding
//==============================

#esPageColumn
  .container
    width: 100%;
    max-width: 1100px;

#topbar > .container,
#dwPosts > .container,
#dwPosts > div > .container,
.esTopbarWrap > .container,
.esAdminArea > .container,
#dwPosts > div > .esTopbarWrap > .container  // try to remove
  padding-left: 20px;
  padding-right: 20px;

html.es-watchbar-open
  #topbar > .container,
  #dwPosts > .container,
  #dwPosts > div > .container,
  .esTopbarWrap > .container,
  .esAdminArea > .container,
  #dwPosts > div > .esTopbarWrap > .container  // try to remove
    padding-left: 25px;

#dwPosts
  position: relative;

