.homepage #dw-react-topbar
  display: none;

#dw-react-topbar
  height: 51px; // avoids height changes when filled with contents
  z-index: 1;

  .dw-topbar-title
    float: left;
    .dw-t, .dw-p, .dw-p-bd, .dw-p-bd-blk
      margin: 0;
      padding: 0;
    h1
      margin: 33px 0 15px 0;
      padding: 0;
      font-size: 26px;

    .dw-p-ttl-e,
    .container
      @media (min-width: 800px)
        width: 350px;
      @media (min-width: 1100px)
        width: 500px;

  #dw-topbar-btns
    float: right;
    margin-top: 15px;

    .dw-name
      font-weight: bold;
      color: hsl(211, 48%, 50%);
      // Align with button texts, not sure why needed.
      position: relative;
      top: 2px;
      cursor: pointer;

    .btn
      margin-left: 10px;
      border: none;

      &.dw-login,
      &.dw-logout,
      &.dw-admin,
      &.dw-a-tools
        background: hsl(210, 51%, 50%);
        font-size: 1em;
        color: white;
        border-radius: 0;
        padding: 3px 8px 4px 5px;
        a
          color: white;

      .icon-settings:before
        position: relative;
        top: 1px;

      &.dw-logout
        padding-left: 8px;

      &.dw-search,
      &.dw-menu
        font-size: 130%;
        color: #666;

        span:before
          font-weight: bold;

      &.dw-menu
        margin-left: 0;

        .caret
          display: none;

  #dw-search-form
    position: absolute;
    right: 0px;
    top: 0px;
    z-index: 1001;  // above sidebar
    background: white;
    width: 360px;
    border: 2px solid rgb(187, 187, 187);
    padding: 20px 15px 10px 10px;

    input
      width: 100%;


.dw-lower-right-corner
  position: absolute; bottom: 0px; right: 0px;


