.dw-cmts-tlbr

  margin: 25px 0 17px
  border: $pageSectionBorder;
  background: $pageSectionBackground;
  padding: 0
  border-left: none
  border-right: none

  .dw-cmts-tlbr-head

    position: relative; // so dw-cmts-tlbr-open height: 100% works

    .dw-cmts-tlbr-summary
      padding: 7px 55px 7px 10px; // COULD extract variable, 50px [KP409f]

      & > li
        display: inline-block;
        margin: 0 0 0 20px;
        color: hsl(0, 0%, 23%);

      & > li:first-child
        margin-left: 0;

      .dw-cmts-count
        font-size: 17px

      .dw-u-lgi-lgo
        display: inline // not block, which the topbar often sets

      .dw-u-name,
      .dw-a-login,
      .dw-a-logout
        color: hsl(0, 0%, 43%)

      .dw-page-notf-level
        cursor: pointer

    .dw-cmts-tlbr-open
      position: absolute;
      height: 100%;
      width: 50px; // COULD extract variable, 50px [KP409f]
      right: 0;
      top: 0;
      background: #ddd;
      border: none;
      font-size: 130%;

  .dw-cmts-tlbr-details
    padding: 8px 10px 10px
    .dw-tlbr-sctn:not(:first-child)
      margin-top: 10px;


.DW.dw-vt .dw-cmts-tlbr
  margin-bottom: 45px



