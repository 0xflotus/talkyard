
.esProfile_isYou
  font-size: 18px;
  margin-left: 1ex;
h1:first-child .esProfile_isYou
  margin-left: 0;

.dw-user-bar
  padding: 15px;
  margin: 20px 0;
  background: hsl($uiHue, 0%, 91%);

  nav.dw-sub-nav
    padding: 0; // no idea why React-Bootstrap adds .dw-sub-nav twice, on the 'nav' too

  .dw-sub-nav
    float: right;
    a
      line-height: 12px;

.user-info
  float: left;
  display: table-row;
  .user-info-col
    display: table-cell;
    vertical-align: top;
    padding-right: 30px;

  h1, h2
    font-size: 26px;
    margin: 0;
    padding: 0;

  h2
    font-size: 18px;
    margin: 12px 0 8px;
    .dw-is-what
      font-family: sans-serif;
      font-size: 80%;

.dw-user-nav
  display: table-cell;
  vertical-align: top;
  width: 200px;
  li
    float: none;

.dw-user-content
  display: table-cell;
  vertical-align: top;
  padding-left: 20px;

.dw-invites-table
  margin-top: 20px;
  td, th
    &:not(:last-child)
      padding-right: 20px;

.esNotfs
  .esNotf
    color: hsl($uiHue, 80%, 38%);
  li
    list-style: none;
    padding: 8px 0;

.esUP
  .esMedAvtr-missing
    background: white;
  .esAvtr-ltr
    width: 124px;
    height: 124px;
    font-size: 65px;
    line-height: 120px;
    vertical-align: middle;
    margin: 23px;
    position: relative;
    top: -5px;
    cursor: default;

.esMedAvtr // medium sized avatar
  position: relative;
  $maxWidth = 180px;
  min-width: 170px;
  max-width: $maxWidth;
  min-height: 170px; // if no photo uploaded
  &:hover
    .esMedAvtr_uplBtn
        visibility: visible;
  img
    max-width: $maxWidth;
    max-height: 200px;

.esMedAvtr_uplBtn  // upload button
  position: absolute;
  visibility: hidden;
  bottom: 10px;
  // Place in the middle:
  left: 50%;
  transform: translateX(-50%);


.esMedAvtr_uplBtn
  color: white;
  border-top: 1px solid white;

.esMedAvtr-missing  // no avatar uploaded, it's misssing
  .esMedAvtr_uplBtn
    visibility: visible;
