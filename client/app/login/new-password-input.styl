.esPw .help-block
  display: block;

.esPw_Strength
  margin-bottom: 4px;

.esPw_Strength_Lbl
  color: hsl(0, 0%, 15%);

.esPw_Strength_Border
  width: 100px;
  height: 14px;
  display: inline-block;
  border: 1px solid hsl(0, 0%, 80%);
  vertical-align: middle;
  margin-left: 6px;
  position: relative;
  top: -1px;

.esPw_Strength_Fill
  background: hsl(120, 100%, 67%);
  height: 100%;

.esPw_Strength-TooWeak
  .esPw_Strength_Fill
    background: hsl(0, 100%, 70%);

.esPw_Strength-FairlyWeak
  .esPw_Strength_Fill
    background: hsl(40, 100%, 60%);

.esPw_Strength-OkWeak
  .esPw_Strength_Fill
    background: hsl(65, 100%, 48.5%)

.esPw_StrongerTips
  color: hsl(30, 100%, 41%);



