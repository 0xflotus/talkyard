
.esLoginDlg_becomeAdminInstr
  margin: 25px 5px;
  text-align: center;
  p
    font-size: 15px;
    line-height: 22px;
    margin-bottom: 10px;

.esLoginDlg_badPwd
  margin: 1.3em 0 1.2em;
  color: red;
  &.esHidden
    opacity: 0.4;
    transition: opacity 0.7s linear;

.dw-login-modal
  max-width: 520px; // else like 600, too wide

.dw-login-dialog
  .btn-group-vertical
    margin: 0 auto;
    display: block;
    width: 19em;

  form
    max-width: 350px;
    margin: 0 auto;

// Add this class to modal dialogs that have opened modal child dialogs.
// This fades the modal dialog by placing an opaque gray layer above.
.dw-modal-fade:before
  content: '';
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 9999;
  opacity: 0.5;

