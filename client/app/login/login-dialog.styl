.dw-login-dialog
  .btn-group-vertical
    margin: 0 auto;
    display: block;
    width: 23em;

// Add this class to modal dialogs that have opened modal child dialogs.
// This fades the modal dialog by placing an opaque gray layer above.
.dw-modal-fade:before
  content: '';
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 9999;
  opacity: 0.5;

