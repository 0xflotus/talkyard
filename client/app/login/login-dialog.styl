
.esLoginDlg_becomeAdminInstr
  margin: 25px 5px;
  text-align: center;
  p
    font-size: 15px;
    line-height: 22px;
    margin-bottom: 10px;

.esLoginDlg_badPwd
  margin: 1.3em 0 1.2em;
  color: red;
  &.esHidden
    opacity: 0.4;
    transition: opacity 0.7s linear;

.dw-login-modal
  max-width: 520px; // else like 600, too wide

.esLD
  .btn-group-vertical
    margin: 0 auto;
    display: block;
    width: 19em;

  $width = 350px;
  .esLD_Switch
    max-width: $width;
    margin-left: auto;
    margin-right: auto;

  form
    max-width: $width;
    margin: 0 auto;

.esLD_Switch_L
  font-weight: bold;
  letter-spacing: 0.5px;
  word-spacing: 1px;
  padding: 0 1px 0 2px;
  color: hsl(207, 100%, 45%);

// Add this class to modal dialogs that have opened modal child dialogs.
// This fades the modal dialog by placing an opaque gray layer above.
.dw-modal-fade:before
  content: '';
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 9999;
  opacity: 0.5;

