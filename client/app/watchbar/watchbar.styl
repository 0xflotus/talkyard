$watchbarHue = $uiHue; // or 0 (red) looks ok too;
$sectionMarginTop = 2rem;
$buttonColor = #919191;

#esWatchbarColumn
  background: hsl(0, 0%, 13%);

.esWB
  height: 100%;
  padding: 10px 17px 10px 10px
  overflow-y: auto;

  .esWB_T_Link
    display: inline-block;
    width: 100%; // or nothing happens when clicks right part of hover-highlighted <li>
    padding: 3px 0 1px 6px;

  h3,
  .esWB_T_Title
    color: hsl(0, 0%, 57%);

    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: 100%;
    overflow: hidden;
    display: inline-block;
    font-size: 14px;

  h3
    text-transform: uppercase;
    font-size: 1.4rem;
    margin: $sectionMarginTop 0 0.2rem;
    cursor: default;
    word-spacing: 1px;

  .esWB_LI
    list-style: none;
    margin: 0 0 2px;
    cursor: pointer;
    &.esWB_T-None
      cursor: default;
    &:not(.esWB_T-None):hover
      background: hsl($watchbarHue, 70%, 22%);
      .esWB_T_Title
        color: hsl(0, 0%, 80%);

    &.esWB_T-Current
      background: hsl($uiHue, 70%, 33%);
      .esWB_T_Title
        color: white;

    &.esWB_T-Unread
      .esWB_T_Title
        color: hsl(0, 0%, 87%);
        font-weight: bold;
        text-shadow: 0.7px 0 0 hsl(0, 0%, 87%);
        letter-spacing: 0.4px;

.esWB_CloseB
  float: right;
  position: relative;
  top: -5px;
  right: -14px;
  color: $buttonColor;
  border-radius: 0;
  padding: 4px 13px 2px 10px;

.esWB_CreateB
  float: right;
  padding: 0;
  margin-top: $sectionMarginTop;
  top: -1px;
  position: relative;
  border: 1px solid $buttonColor;
  border-radius: 50%;
  width: 16px;
  height: 16px;
  font-size: 17px;
  font-weight: bold;
  line-height: 0;
  background: none;
  color: $buttonColor;

.esWB_CloseB,
.esWB_CreateB
  &:hover
    background: hsl($watchbarHue, 85%, 22%);
    color: hsl(0, 0%, 80%);

.esWB_CreateB
  &:hover
    box-shadow: 0 0 0 8px hsl(207, 85%, 22%);

