$watchbarHue = 0;

.esWatchbar
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  background: white;
  width: 16.1%;
  z-index: 1000;
  background: hsl($watchbarHue, 0%, 97%);
  border-right: 8px solid #eee;
  padding: 26px 17px 10px 10px
  overflow: hidden;

  h3,
  li span
    color: hsl(0, 0%, 47%);
    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: 100%;
    overflow: hidden;
    display: inline-block;

  h3
    text-transform: uppercase;
    font-size: 1.4rem;
    margin: 2rem 0 0.7rem;

  li
    list-style: none;
    margin: 0;
    padding: 0.2rem 0;
    cursor: pointer;
    &:hover
      background: hsl($watchbarHue, 60%, 14%);

