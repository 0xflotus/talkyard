
.esPage .dw-help,
.dw-help + .dw-help
  margin-top: 1em;

.dw-help + .dw-page h1.dw-p-ttl
  margin-top: 0;
  padding-top: 0;

.dw-help
  max-width: 730px;
  background-color: hsl($uiHue, 100%, 95%);
  padding: 10px 13px 7px 12px;
  border-radius: 2px;
  clearfix()

  .dw-hide
    float: right;
    position: relative;
    top: -2px;

  // ---- Page type icons
  // (Could wrap this in some esHelp-pageTypeIcon later if needed?)

  // Make icons look like they do in front of the title, so people realize that the (?)
  // in "This is a (?) question, ..." is the same (?) as the one just in front of the
  // page title.
  .icon-help-circled
    font-size: 139%;
    color: hsl(0, 0%, 48%);
    position: relative;
    top: 1px;
    margin-right: -1px;

  .icon-ok-circled,
  .icon-ok-circled-empty
    font-size: 127%;
    color: hsl(0, 0%, 37%);

  .esHelp-solved
    .icon-ok-circled,
    .icon-ok-circled-empty
      color: hsl($solvedHue, 57%, 43%);

.dw-how-to-show-help-again
  .dw-hamburger-menu
    border: 1px solid #888;
    padding: 0 5px 2px 3px;

.dwHelp-large
  padding: 14px 12px 11px 14px;
  max-width: 580px;
  font-size: 113%;
  line-height: 1.5;
  letter-spacing: 0.1px;
  word-spacing: 1px;

.esHelp-warning
  background-color: hsl(40, 80%, 90%);


