
.esDropModal
  width: auto; // else too narrow
  margin: 0;
  .modal-content
    width: 0;

.esDropModal_content
  position: fixed;
  padding: 11px 12px 15px 4px;
  box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.37);
  background: white;
  min-width: 150px;
  margin-right: -3px 12px 0 0;

.esDropModal_header
  font-style: italic;
  font-size: 14px;
  margin: 14px 0 4px 11px;
  &:first-child
    margin-top: 3px;

