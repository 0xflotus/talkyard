.dw-cmts-tlbr

  margin: 25px 0 17px
  border: 1px solid hsl(0, 0%, 77%)
  background: hsl(0, 0%, 98%)
  padding: 10px
  border-left: none
  border-right: none

  .dw-cmts-count
    font-size: 17px
    margin-right: 1em

  .dw-u-lgi-lgo
    display: inline // not block, which the topbar often sets

  .dw-u-name,
  .dw-a-login,
  .dw-a-logout
    color: hsl(0, 0%, 43%)

  .dw-a-logout
    margin-left: 1em

.DW.dw-vt .dw-cmts-tlbr
  margin-bottom: 45px


.dw-cmts-tlbr.dw-embedded

  .dw-u-lgi-lgo
    float: right

  button.dw-a-reply
    float: none
    margin-left: 3px

  button
    font-size: 13px

  .dw-u-name,
  button
    color: hsl(210, 51%, 45%) !important
    font-weight: normal


