.dw-main-nav
  margin: 50px auto 0;

.dw-sub-nav
  background: hsl($uiHue, 50%, 80%);
  padding: 8px 8px 0;

.dw-sub-nav.nav-pills .active a
  &
  &:focus
    color: hsl($uiHue, 56%, 35%);
    background: white;

.dw-admin-panel
  margin-top: 10px;

.dw-users-to-review
  .btn
    margin: 0 5px
    :first-child
      margin-left: 0


.nav-pills > li
  border-radius: 4px;
  :first-child
    margin-left: 0

.main-tabs
  margin-top: 40px

.tab-content
  margin-top: 25px

.tab-content > .tab-pane
  padding-top: 20px

// Don't lett Debiki's other styles affect Bootstrap's tooltip text
.tooltip
  white-space: normal !important
  font-size: 13px !important
  font-weight: normal !important
  font-style: normal !important

.nav-tabs > li
  margin-left: 0 // or space between Twitter Bootstrap tabs

// not really in use, will probably delete
.inline-action
  color: red !important

// For embedded comments sites, it's rather confusing with buttons intended
// for forums and blogs and websites, so hide them.
.hide-for-embedded-comments
  display: none



// Settins and Special Content tabs
//--------------------------------------------

.special-content
  margin-top: 33px;
  label
    text-align: right

.setting-label
  text-align: right
  margin-top: 10px


textarea.special-content-_tou_content_license
  min-height: 90px

textarea.special-content-_tou_jurisdiction
  min-height: 150px



