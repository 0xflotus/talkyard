.esAdminSectionIntro
  margin: 2em 0 1.5em;
  p
    font-style: italic;

.esAdmin_settings,
.esAdmin_customize
  padding-bottom: 40px;
  .form-group
    margin-top: 8px;
    margin-bottom: 0;
  .control-label
    padding-top: 17px; // 7 -> 17 because of padding-top below [930KPU12]

.esAdmin_settings_setting-unsaved
  background: hsl(60, 95%, 77%);  // yellow background

.esAdmin_settings_setting
  padding-top: 10px;  // so there'll be some yellow background also above unsaved fileds [930KPU12]
  &.disabled
    label
      opacity: 0.6;
.esAdmin_settings_setting_btn
  position: relative;
  left: 4px;
  margin-bottom: 8px;

.esAdmin_savebar
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10px;
  background: hsl(0, 0%, 97%);
  box-shadow: 0 0 25px 10px hsl(0, 0%, 34%);
  // Center the buttons:
  text-align: center;
  .container
    display: inline-block;
    .btn
      margin-right: 10px;

.dw-main-nav
  margin: 30px auto 12px;
  a
    font-weight: bold;
    color: hsl(0, 0%, 29%);

.dw-sub-nav
  background: $subNavBackgroundColor;
  padding: 0;
  a
    color: $subNavColor;
    &:hover
      background: $subNavHoverBackgroundColor;

.dw-sub-nav .active a
  &:focus
    color: hsl($uiHue, 56%, 35%);
    background: white;

.esAdminArea
  .dw-sub-nav
    margin-top: 14px;

.dw-admin-panel
  margin-top: 10px;

.dw-users-to-review
  .btn
    margin: 0 5px
    :first-child
      margin-left: 0


.nav-pills > li
  border-radius: 4px;
  :first-child
    margin-left: 0

.main-tabs
  margin-top: 40px

.tab-content
  margin-top: 25px

.tab-content > .tab-pane
  padding-top: 20px

// Don't lett Debiki's other styles affect Bootstrap's tooltip text
.tooltip
  white-space: normal !important
  font-size: 13px !important
  font-weight: normal !important
  font-style: normal !important

.nav-tabs > li
  margin-left: 0 // or space between Twitter Bootstrap tabs

// not really in use, will probably delete
.inline-action
  color: red !important

// For embedded comments sites, it's rather confusing with buttons intended
// for forums and blogs and websites, so hide them.
.hide-for-embedded-comments
  display: none



// Settins and Special Content tabs
//--------------------------------------------

.special-content
  margin-top: 33px;
  label
    text-align: right

.setting-label
  text-align: right
  margin-top: 10px


textarea.special-content-_tou_content_license
  min-height: 90px

textarea.special-content-_tou_jurisdiction
  min-height: 150px



