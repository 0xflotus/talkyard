// For right-to-left languages, like Arabic, Hebrew, Kurdish, Urdu.
// The gulpfile removes __RTL_LEFT_IS_RIGHT__ â€” we insert it here,
// to stop Stylus from double-applying both margin-right() and then
// margin-left() which undoes margin-right().


float(vvvalue, important = null)
  if vvvalue == left
    float__RTL_LEFT_IS_RIGHT__: right important;
  else if vvvalue == right
    float__RTL_LEFT_IS_RIGHT__: left important;
  else
    float__RTL_LEFT_IS_RIGHT__: arguments;


text-align(vvvalue, important = null)
  if vvvalue == left
    text-align__RTL_LEFT_IS_RIGHT__: right important;
  else if vvvalue == right
    text-align__RTL_LEFT_IS_RIGHT__: left important;
  else
    text-align__RTL_LEFT_IS_RIGHT__: arguments;


right()
  left__RTL_LEFT_IS_RIGHT__: arguments;

left()
  right__RTL_LEFT_IS_RIGHT__: arguments;
  

margin-right()
  margin-__RTL_LEFT_IS_RIGHT__left: arguments;

margin-left()
  margin-__RTL_LEFT_IS_RIGHT__right: arguments;


padding-right()
  padding-__RTL_LEFT_IS_RIGHT__left: arguments;

padding-left()
  padding-__RTL_LEFT_IS_RIGHT__right: arguments;


