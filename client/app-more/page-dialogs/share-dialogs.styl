
$height = 52px;

.s_ShareD
  width: 340px;
  max-width: 100%;
  padding: 6px 26px 0 10px;
  .esDropModal_CloseB.esCloseCross
    padding: 6px 11px 35px 30px; // smaller, so won't overlap the <input> with the URL

.s_ShareD_Title
  margin: 0 30px 10px 0;

.s_ShareD_Link
  width: 100%;

.s_ShareD_Social
  margin: 15px 0 4px;

.p_ShareIcon
  display: inline-block;
  font-size: 28px;
  background: hsl(207, 100%, 54%);
  color: white;
  border: 0 solid transparent;
  border-radius: 50%;
  padding: 0px 5px 0 7px;
  margin-right: 5px;
  height: $height;
  vertical-align: top;
  &.icon-facebook
    background: #4267b2;
    &:before
      display: none;
    img.s_FbIcon
      padding: 11px 6px 5px;
      width: 41px;
      vertical-align: middle;
  &.icon-email
    padding: 6px;
  &:hover
    text-decoration: none;
    background: hsl(207, 100%, 70%);
    color: white;
  &:before
    line-height: $height;

