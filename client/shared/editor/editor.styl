

.dw-embedded-editor
  #debiki-editor-controller
    height: 100% !important
  #debiki-editor-placeholder
    display: none


#debiki-editor-placeholder
  height: 300px

#debiki-editor-controller
  position: fixed
  bottom: 0
  background: hsl(0, 0%, 70%)
  width: 100%
  height: 300px
  padding: 20px 5px 5px 15px
  z-index: 1000

  .editor-area
    height: 200px
    width: 50%
    padding: 0 10px 10px 0
    float: left
    position: relative

    .editor-wrapper
      position: absolute
      top: 20px
      right: 10px
      bottom: 10px
      left: 0

      .editor
        width: 100%
        height: 100%

    .preview
      height: 100%
      width: 100%

  .preview-area
    height: 200px
    float: left
    width: 45%
    position: relative

    .preview
      position: absolute;
      top: 20px;
      left: 0;
      right: 0;
      bottom: 0;

  .submit-cancel-btns
    clear: both
