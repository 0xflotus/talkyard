// Styles for admin, moderator and configuration pages.



body,
.container
  position: relative

.container
  margin: 0 auto

// This <ins> and <del> was copied from debiki-play.css.
ins
  text-decoration: none
  background: #9f9

del
  text-decoration: line-through
  background: #ffd0d0

p, // override Twitter Bootstrap 
body,
.dw-depth-1 blockquote p // override Bootstrap
  font: 13px Verdana, sans-serif

article
  line-height: 165%

h1, h2, h3, h4, h5, h6
  letter-spacing: 1px
  line-height: 1em
  margin-top: 30px
  margin-bottom: 15px
  color: #393939

h1, h2, h3, h4, h5, h6
  font-family: Bree serif, Georgia, serif
  font-weight: normal

h1
  font-size: 35px
  color: #454545
  padding-top: 15px
  margin-bottom: 4px

h2
  color: #444
  font-size: 24px
  margin: 35px 0 15px 0 !important

.container > h2
  color: hsl(39, 99%, 49%)
  border-bottom: 1px solid hsl(39, 100%, 80%)
  padding-bottom: 5px

h3
  font-size: 20px
  color: #333
  margin-top: 29px

h4
  font-size: 15px
  color: #555

h5, h6
  font-size: 13px
  color: #707070
  font-family: Arial, sans-serif

p, li
  color: #111

p
  margin-bottom: 1em
  line-height: 20px

.dw-res p,
.dw-res ul,
.dw-res ol
  margin-bottom: 0.7em
  line-height: normal

li
  margin-left: 2.9em
  margin-bottom: 0.6em

ul, ol
  margin: 0

ul
  list-style-type: disc

ol
  list-style-type: decimal

img
  width: 100%
  display: block // TODO inline those with no \n\n inbetween preceeding text
  margin: 1.5em auto // TODO margin-bottom 0 if post ends there

i, em
  font-style: italic

small
  font-size: 80%
  color: #444

// Bootstrap's <pre> whiteSmoke too dark, and <code> bg colored.
pre, code
  background-color: #f7f7f7
  color: #222
  font-size: 12px // or unreadably small
  line-height: 16px

small code
  background-color: inherit
  color: inherit
  padding: 0
  border: none
  font-size: inherit

a
  text-decoration: none

a:hover, a:active
  text-decoration: underline

.dw-pri .ui-widget-content a, // undo jQuery UI settings 
a, a:link
  color: hsl(211, 88%, 35%)

.dw-pri .ui-widget-content a:visited,
a:visited
  color: hsl(211, 30%, 40%)

#alfa-info
  font-style: italic
  font-size: 90%
  text-align: center
  left: 0
  top: 0
  width: 100%
  z-index: 100
  padding: 7px 0



// Code pages and templates
//==============================


.dw-page[data-page_role=Code] > h1
  margin-bottom: 0
  font-size: 20px

.dw-page[data-page_role=Code] > h1
.dw-page[data-page_role=Code] p
  font-family: monospace



