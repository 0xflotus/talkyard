.dw-forum-actionbar
  clear: both
  padding 20px 0 25px

  li
    margin-left: 0

  .dw-main-category-dropdown
    float: left
    margin-right: 10px

    .dropdown-toggle
      padding: 5px 12px 5px 15px

    a
      cursor: pointer

  .nav
    float: left
    margin-left: 10px

    li
      a
        padding: 5px 15px

      &.active a
        background-color: hsl(211, 50%, 53%)

  button
    float: right
    margin-left: 5px


